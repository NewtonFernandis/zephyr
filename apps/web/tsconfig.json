{
  "extends": "@zephyr/config/react.tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "lib": ["DOM", "ESNext", "DOM.Iterable"],
  "paths": {
    "@ZC*": ["src/components*"],
    "@ZP*": ["src/pages*"]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
