{
  "extends": "@zephyr/config/react.tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@zephyr-ui/*": ["./src/components/ui/*"]
    }
  },
  "lib": ["DOM", "ESNext", "DOM.Iterable"],
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
